#include <opencog/atomspace/AtomSpace.h>
#include <opencog/atomspace/Handle.h>

using namespace opencog;

class AttentionBankUTest :  public CxxTest::TestSuite
{
private:
    AtomSpace atomSpace;

public:
    AttentionBankUTest()
    {
        logger().setLevel(Logger::INFO);
        logger().setPrintToStdoutFlag(true);
    }

    void setUp() {}

    void tearDown() {}

    /*
     * Confirm that the AttentionBank data structure that stores minimum and
     * maximum STI values is updated when individual atoms have their STI
     * updated
     */   
    void testImportanceBoundaries()
    {
        TS_ASSERT_EQUALS(atomSpace.getMinSTI(false), 0);
        TS_ASSERT_EQUALS(atomSpace.getMaxSTI(false), 0);

        Handle n1 = atomSpace.addNode(CONCEPT_NODE, "n1");
        Handle n2 = atomSpace.addNode(CONCEPT_NODE, "n2");
        Handle n3 = atomSpace.addNode(CONCEPT_NODE, "n3");

        atomSpace.setSTI(n1, 1000);
        TS_ASSERT_EQUALS(atomSpace.getMinSTI(false), 0);
        TS_ASSERT_EQUALS(atomSpace.getMaxSTI(false), 1000);

        atomSpace.setSTI(n2, 500);
        atomSpace.setSTI(n3, 0);
        TS_ASSERT_EQUALS(atomSpace.getMinSTI(false), 0);
        TS_ASSERT_EQUALS(atomSpace.getMaxSTI(false), 1000);

        atomSpace.setSTI(n1, 10);
        atomSpace.setSTI(n3, 20000);
        TS_ASSERT_EQUALS(atomSpace.getMinSTI(false), 10);
        TS_ASSERT_EQUALS(atomSpace.getMaxSTI(false), 20000);

        atomSpace.setSTI(n1, 5);
        atomSpace.setSTI(n2, 0);
        atomSpace.setSTI(n3, 0);
        TS_ASSERT_EQUALS(atomSpace.getMinSTI(false), 0);
        TS_ASSERT_EQUALS(atomSpace.getMaxSTI(false), 5);

        atomSpace.setSTI(n1, 1000);
        atomSpace.setSTI(n2, 1000);
        atomSpace.setSTI(n3, 1000);
        TS_ASSERT_EQUALS(atomSpace.getMinSTI(false), 1000);
        TS_ASSERT_EQUALS(atomSpace.getMaxSTI(false), 1000);

        atomSpace.setSTI(n1, 20);
        atomSpace.setSTI(n2, 20);
        atomSpace.setSTI(n3, 19);
        TS_ASSERT_EQUALS(atomSpace.getMinSTI(false), 19);
        TS_ASSERT_EQUALS(atomSpace.getMaxSTI(false), 20);
    }
};
